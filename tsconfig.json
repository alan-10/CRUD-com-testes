{
  "include": ["./src/**/*"],
  "compilerOptions": {    
    "target": "es5",                               
    "module": "commonjs",                        
    "strict": true,                                 
     "strictPropertyInitialization": false,        
     "baseUrl": "./src",                             
     "paths": {
       "@shered/*":["shared/*"],
       "@modules/*":["modules/*"]
     },                                 
    "resolveJsonModule": true,
    "esModuleInterop": true,                        
     "experimentalDecorators": true,             
     "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
